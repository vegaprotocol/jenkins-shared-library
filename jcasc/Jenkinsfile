import io.jenkins.plugins.casc.ConfigurationAsCode;

pipeline {
    agent any
    options {
        timestamps()
        ansiColor('x-term')
        disableConcurrentBuilds()
    }
    stages {
        stage('Apply Config') {
            when {
                anyOf {
                    changeset "jcasc/**"
                    triggeredBy 'UserIdCause'
                }
            }
            steps {
                script {
                    ConfigurationAsCode.get().configure()
                }
            }
        }
    }
}
